<form id="edit-todo-form">
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" value=this.model.title placeholder="Add todo..."}}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type="date" class="form-control" value=this.model.date}}
  </div>
  <div class="form-group">
    <label>Body</label>
    {{textarea class="form-control" value=this.model.body placeholder="Todo body..."}}
  </div>
  <button {{action "editTodo" model.id}} class="btn btn-primary">Save</button>
  {{#link-to "todos" class="btn btn-default"}}Close{{/link-to}}
  <button {{action "deleteTodo" model.id}} class="btn btn-danger float-right">Delete</button>
</form>
